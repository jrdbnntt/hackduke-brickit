doctype html
html
	head
		meta(charset='utf-8')
		meta(http-equiv='X-UA-Compatible' content='IE=edge')
		meta(name='viewport', content='width=device-width, initial-scale=1')

		title #{title}

		//- Styles
		link(rel='stylesheet' href='/css/bootstrap.min.css')
		link(rel='stylesheet' href='/css/main.css')
		block localCSS

	body
		#header
			nav.navbar.navbar-default.navbar-fixed-top
				.container
					.navbar-header
						button.navbar-toggle.collapsed(type='button', data-toggle='collapse', data-target='#navbar', aria-expanded='false', aria-controls='navbar')
							span.sr-only Toggle navigation
							span.icon-bar
							span.icon-bar
							span.icon-bar
						a.navbar-brand(href='/' style="padding-top:10px")
							span
								img(alt='Brand' src='/img/BrickIt-Logo.png', style='height: 34px; width:35px; padding-bottom:3px;' )
							strong   BrickIt
					#navbar.navbar-collapse.collapse
						ul.nav.navbar-nav
							
						ul.nav.navbar-nav.navbar-right
							li
								a(href='#about' style='font-size: 13px;') ABOUT
							li
								a(href='#contact' style='font-size: 13px;') CONTACT
							li
								a(href='#signIn' style='font-size: 13px;') SIGN IN

		#page

			block content

		#footer
			//- TODO

		//- JavaScript
		script(src='/bower_components/jquery/dist/jquery.min.js')
		script(src='/bower_components/bootstrap/dist/js/bootstrap.min.js')
		script(src='/js/main.js')
		block localJS